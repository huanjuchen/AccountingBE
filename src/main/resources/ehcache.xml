<?xml version="1.0" encoding="UTF-8"?>
<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd">


    <cache alias="tokenCache">
        <key-type>java.lang.Integer</key-type>
        <value-type>java.lang.String</value-type>
        <expiry>
            <tti unit="hours">2</tti>
        </expiry>
        <resources>
            <heap unit="entries">1024</heap>
        </resources>
    </cache>

    <cache alias="userCache">
        <key-type>java.lang.Integer</key-type>
        <value-type>huanju.chen.app.model.entity.User</value-type>
        <expiry>
            <tti unit="hours">6</tti>
        </expiry>
        <resources>
            <heap unit="entries">128</heap>
        </resources>
    </cache>

    <cache alias="subjectCache">
        <key-type>java.lang.Integer</key-type>
        <value-type>huanju.chen.app.model.entity.Subject</value-type>
        <expiry>
            <tti unit="hours">6</tti>
        </expiry>
        <resources>
            <heap unit="entries">64</heap>
        </resources>
    </cache>

    <cache alias="examinationCache">
        <key-type>java.lang.Integer</key-type>
        <value-type>huanju.chen.app.model.entity.Examination</value-type>
        <expiry>
            <tti unit="hours">2</tti>
        </expiry>
        <resources>
            <heap unit="entries">128</heap>
        </resources>
    </cache>

    <cache alias="proofListCache">
        <key-type>java.lang.Integer</key-type>
        <value-type>java.util.List</value-type>
        <expiry>
            <tti unit="hours">2</tti>
        </expiry>
        <resources>
            <heap unit="MB">16</heap>
        </resources>
    </cache>

    <cache alias="proofCache">
        <key-type>java.lang.Integer</key-type>
        <value-type>huanju.chen.app.model.entity.Proof</value-type>
        <expiry>
            <tti unit="hours">2</tti>
        </expiry>
        <resources>
            <heap unit="MB">16</heap>
        </resources>
    </cache>


</config>
